{
  "name": "sprotty-showcase",
  "version": "0.0.1",
  "description": "showcase content for the sprotty website",
  "private": "true",
  "scripts": {
    "clean": "npx npx shx rm -rf ../hugo/static/showcase",
    "build": "npm run build-examples & npm run build-language-server & npm run copy-monaco-workers & npm run copy-elk-worker",
    "build-examples": "esbuild ./src/index.ts --bundle --minify --sourcemap --outfile=../hugo/static/showcase/bundle.js --loader:.ttf=file",
    "build-language-server": "esbuild ./src/langium-diagram/language-server/main-browser.ts --bundle --minify --sourcemap --outfile=../hugo/static/showcase/language-server.js --loader:.ttf=file",
    "langium:generate": "langium generate",
    "copy-monaco-workers": "shx cp -R ../node_modules/monaco-editor-workers/dist/workers ../hugo/static/showcase/monaco-workers",
    "copy-elk-worker": "shx mkdir ../hugo/static/showcase/elk-workers/ & shx cp -R ../node_modules/elkjs/lib/elk-worker.js ../hugo/static/showcase/elk-workers/"
  },
  "devDependencies": {
    "esbuild": "0.17.5",
    "typescript": "4.9.5",
    "langium-cli": "~1.0.0",
    "shx": "0.3.4"
  },
  "dependencies": {
    "sprotty": "0.13.0",
    "sprotty-elk": "^0.13.1",
    "reflect-metadata": "^0.1.13",
    "monaco-editor-workers": "0.34.2",
    "monaco-editor-wrapper": "1.3.2",
    "langium": "1.0.1",
    "langium-sprotty": "1.0.0",
    "vscode-languageserver": "8.0.2",
    "vscode-languageserver-protocol": "3.17.2"
  }
}
